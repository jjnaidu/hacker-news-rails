<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Text</th>
    <th>Author</th>
  </tr>

  <tr>
    <td><%= @post.id %></td>
    <td><%= @post.title %></td>
    <td><%= @post.body %></td>
    <td><%= @post.user.username %></td>
  </tr>
</table>
<% if @post.comments %>
  <% @post.comments.each do |comment| %>
      <%= comment.comment%>
      <%= comment.user.username %>
  <% end %>
<% end %><br />
<%= link_to 'Comment', new_post_comment_path(@post) %> | <%= link_to 'Back', posts_path %>
